        static void basic4()
        {
            Console.Clear();
            Console.WriteLine("\n+==============================================================+"
                            + "\n|                                                              |"
                            + "\n|                        NÍVEL BÁSICO                          |"
                            + "\n|                                                              |"
                            + "\n+--------------------------------------------------------------+"
                            + "\n|                                                              |"
                            + "\n|  4 - Os ácidos nucleicos compreendem o DNA e o RNA, também   |"
                            + "\n|  conhecidos como as moléculas da vida. Sobre essas duas im-  |"
                            + "\n|  portantíssimas estruturas presentes em todo e qualquer ser  |"
                            + "\n|  vivo, escolha a alternativa correta:                        |"
                            + "\n|                                                              |"
                            + "\n|    a) O DNA é formado por uma fita única e difere RNA, que   |"
                            + "\n|    é formado por uma fita dupla                              |"
                            + "\n|                                                              |"
                            + "\n|    b)  O RNA está presente em todos os seres vivos enquanto  |"
                            + "\n|    o DNA é verificado apenas nos seres vivos superiores,     |"
                            + "\n|    como, por exemplo, os primatas                            |"
                            + "\n|                                                              |"
                            + "\n|    c) O DNA é formado por uma fita dupla que contém os ge-   |"
                            + "\n|    nes com as informações genéticas do organismo             |"
                            + "\n|                                                              |"
                            + "\n|    d) O RNA origina o DNA que, ao longo da vida, se repli-   |"
                            + "\n|    cará inúmeras vezes                                       |"
                            + "\n|                                                              |"
                            + "\n+==============================================================+");

            string resp, escolha;
            resp = "a";
            escolha = Console.ReadLine();

            if (escolha == resp)
            {
                correto();
                Console.ReadKey();
                basic5();
            }
            else
            {
                gameover();
                Console.ReadKey();
                niveis();
            }
        }
        static void basic5()
        {
            Console.Clear();
            Console.WriteLine("\n+===============================================================+"
                            + "\n|                                                               |"
                            + "\n|                          NÍVEL BÁSICO                         |"
                            + "\n|                                                               |"
                            + "\n+---------------------------------------------------------------+"
                            + "\n|                                                               |"
                            + "\n|  5 - (CEMASC, 2019) Recentemente, cientistas construíram uma  |"
                            + "\n|  molécula de ácidos nucleicos formada por oito nucleotídeos   |"
                            + "\n|  que apresentavam as quatro bases nitrogenadas tradicionais   |"
                            + "\n|  (Adenina, Timina, Citosina e Guanina) e quatro novas bases   |"
                            + "\n|  (Z, P, S e B). Existe uma relação química e funcional das    |"
                            + "\n|  bases tradicionais já conhecidas com as novas bases, como    |"
                            + "\n|  descrita a seguir:                                           |"
                            + "\n|                                                               |"
                            + "\n|   B -> Adenina | S -> Timina | P -> Guanina | Z -> Citosina   |"
                            + "\n|                                                               |"
                            + "\n|   a) O DNA é formado por uma fita única e difere RNA, que é   |"
                            + "\n|   formado por uma fita dupla                                  |"
                            + "\n|                                                               |"
                            + "\n|   b)  O RNA está presente em todos os seres vivos enquanto o  |"
                            + "\n|   DNA é verificado apenas nos seres vivos superiores, como    |"
                            + "\n|   por exemplo, os primatas                                    |"
                            + "\n|                                                               |"
                            + "\n|   c) O DNA é formado por uma fita dupla que contém os genes   |"
                            + "\n|   nes com as informações genéticas do organismo               |"
                            + "\n|                                                               |"
                            + "\n|   d) O RNA origina o DNA que, ao longo da vida, se replica-   |"
                            + "\n|   rá inúmeras vezes                                           |"
                            + "\n|                                                               |"
                            + "\n+===============================================================+");

            string resp, escolha;
            resp = "a";
            escolha = Console.ReadLine();

            if (escolha == resp)
            {
                correto();
                Console.ReadKey();
                intermed1();
            }
            else
            {
                gameover();
                Console.ReadKey();
                niveis();
            }
        }
