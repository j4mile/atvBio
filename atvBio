                            + "\n|                                                  |"
                            + "\n|   Professora Cíntia Jardim (biologia)            |"
                            + "\n|                                                  |"
                            + "\n+--------------------------------------------------+"
                            + "\n|                                                  |"
                            + "\n|    Pressione qualquer tecla para continuar...    |"
                            + "\n|                                                  |"
                            + "\n+==================================================+");
            Console.ReadKey();
            instrucoes();
        }

        static void instrucoes()
        {
            Console.Clear();
            Console.WriteLine("\n+============================================================+"
                            + "\n|                                                            |"
                            + "\n|                         INSTRUÇÕES                         |"
                            + "\n|                                                            |"
                            + "\n+------------------------------------------------------------+"
                            + "\n|                                                            |"
                            + "\n|   BEM-VINDO! Esse é um mini-game de biologia, dividido     |"
                            + "\n|   em três níveis diferentes (básico, intermediário e a-    |"
                            + "\n|   vançado). Cada nível corresponde a uma fase do ensino    |"
                            + "\n|   médio (primeiro, segundo e terceiro) e possui 5 ques-    |"
                            + "\n|   tões. As questões são baseadas em conteúdos da ementa    |"
                            + "\n|   de cada ano e foram previamente corrigidas por uma       |"
                            + "\n|   professora da área.                                      |"
                            + "\n|                                                            |"
                            + "\n+------------------------------------------------------------+"
                            + "\n|                                                            |"
                            + "\n|         Pressione qualquer tecla para continuar...         |"
                            + "\n|                                                            |"
                            + "\n+============================================================+");
            Console.ReadKey();
            niveis();
            comoJogar();
        }

        static void niveis()
        {
            Console.Clear();
            Console.WriteLine("\n+==================================+"
                            + "\n|                                  |"
                            + "\n|               NÍVEIS             |"
                            + "\n|                                  |"
                            + "\n+----------------------------------+"
                            + "\n|                                  |"
                            + "\n|   1. NÍVEL BÁSICO                |"
                            + "\n|   2. NÍVEL INTERMEDIÁRIO         |"
                            + "\n|   3. NÍVEL AVANÇADO              |"
                            + "\n|                                  |"
                            + "\n+==================================+");
            int nivel;
            nivel = int.Parse(Console.ReadLine());
            switch (nivel)
            {
                case 1:
                    Console.Clear();
                    basic();
                    basic1();
                    break;

                case 2:
                    Console.Clear();
                    //intermed();
                    intermed1();
                    break;

                case 3:
                    Console.Clear();
                    //avanc();
                    break;    
            }

        }
