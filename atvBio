{
    internal class Program
    {
        static void Main(string[] args)
        {
            telaInicial();
            Console.ReadKey();
        }

        static void telaInicial()
        {
            Console.WriteLine("\n+============================================+"
                            + "\n|                                            |"
                            + "\n|                  BIOLOGIA                  |"
                            + "\n|                                            |"
                            + "\n+============================================+"
                            + "\n|                                            |"
                            + "\n|   Desenvolvido por: Anne Cordeiro, Bruna   |"
