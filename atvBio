      static void comoJogar(){
        Console.Clear();
        Console.WriteLine(    "\n+============================================================+"
                            + "\n|                                                            |"
                            + "\n|                         INSTRUÇÕES                         |"
                            + "\n|                                                            |"
                            + "\n+------------------------------------------------------------+"
                            + "\n|                                                            |"
                            + "\n|   COMO JOGAR? Primeiramente, você irá escolher o nível     |"
                            + "\n|   que deseja iniciar. Após o término de cada nível, você   |"
                            + "\n|   seguirá para o próximo.                                  |"
                            + "\n|                                                            |"
                            + "\n|   Todas as questões são objetivas, com 5 alternativas,     |"
                            + "\n|   de A à E. Apenas uma delas é correta.                    |"
                            + "\n|                                                            |"
                            + "\n|   Você irá analisar cada alternativa e inserir a letra     |"
                            + "\n|   correspondente à alternativa escolhida. Se acertado,     |"
                            + "\n|   seguirá para a próxima pergunta. Em caso de erro, seu    |"
                            + "\n|   progresso será resetado e você retornará para a tela     |"
                            + "\n|   de níveis.                                               |"
                            + "\n|                                                            |"
                            + "\n+------------------------------------------------------------+"
                            + "\n|                                                            |"
                            + "\n|         Pressione qualquer tecla para continuar...         |"
                            + "\n|                                                            |"
                            + "\n+============================================================+");
        Console.ReadKey();
        niveis();
      }
   }
}
